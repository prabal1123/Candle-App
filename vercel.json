{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node@3" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/create-order", "dest": "/api/create-order.js" },
    { "src": "/api/(.*)", "dest": "/api/$1.js" },

    { "handle": "filesystem" },

    { "src": "/(?!assets/|favicon\\.ico|robots\\.txt|manifest\\.json).*", "dest": "/index.html" }
  ]
}
